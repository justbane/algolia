# PHP API Configuration
# Copy this file to .env and fill in your actual values

# PHP/SQL API Settings (Internal Network)
PHP_API_URL=DEMO
# PHP_API_URL=PRODUCT_LOAD
# PHP_API_URL=http://internal-api.company.local
PHP_API_TIMEOUT=30

# PHP API Rate Limits
MAX_RESULTS_PER_REQUEST=1000
MAX_REQUESTS_PER_SECOND=10

# Algolia Configuration
ALGOLIA_APP_ID=YOUR_APP_ID_HERE
ALGOLIA_API_KEY=YOUR_ADMIN_API_KEY_HERE
ALGOLIA_INDEX_NAME=products

# Algolia Upload Settings
ALGOLIA_BATCH_SIZE=10000

# Optional: Authentication for PHP API
# PHP_API_USERNAME=your_username
# PHP_API_PASSWORD=your_password
