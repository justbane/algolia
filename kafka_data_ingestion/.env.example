# Kafka Configuration
# Copy this file to .env and fill in your actual values

# Kafka Mode: DEMO or PRODUCTION
KAFKA_MODE=DEMO

# Kafka Connection (Production Mode)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
# KAFKA_BOOTSTRAP_SERVERS=kafka-broker-1:9092,kafka-broker-2:9092,kafka-broker-3:9092

# Kafka Topic
KAFKA_TOPIC=product-updates

# Kafka Consumer Group
KAFKA_GROUP_ID=algolia-indexer

# Batch Size (number of messages to batch before uploading)
BATCH_SIZE=100

# Algolia Configuration
ALGOLIA_APP_ID=YOUR_APP_ID_HERE
ALGOLIA_API_KEY=YOUR_ADMIN_API_KEY_HERE
ALGOLIA_INDEX_NAME=products

# Optional: Kafka Authentication (SASL/SSL)
# KAFKA_SASL_MECHANISM=PLAIN
# KAFKA_SASL_USERNAME=your_username
# KAFKA_SASL_PASSWORD=your_password
# KAFKA_SECURITY_PROTOCOL=SASL_SSL
