# XML Catalog Configuration
# Copy this file to .env and fill in your actual values

# XML Catalog URL (updated hourly by Node.js/MongoDB system)
XML_CATALOG_URL=DEMO
# XML_CATALOG_URL=https://secure-catalog.company.com/products.xml

# XML Catalog Settings
XML_CATALOG_TIMEOUT=300000
# 300000ms = 5 minutes (for large catalogs)

# Optional: Authentication for XML catalog
# XML_CATALOG_USERNAME=your_username
# XML_CATALOG_PASSWORD=your_password

# Algolia Configuration
ALGOLIA_APP_ID=YOUR_APP_ID_HERE
ALGOLIA_API_KEY=YOUR_ADMIN_API_KEY_HERE
ALGOLIA_INDEX_NAME=products

# Algolia Upload Settings
ALGOLIA_BATCH_SIZE=10000
